<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kash.cstimemanagement.AddActivity">

    <EditText
        android:id="@+id/task_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="Task Name"
        android:inputType="text"
        android:textSize="30dp"
      />

    <EditText
        android:id="@+id/task_details_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/task_name_input"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="Task Details"
        android:inputType="text"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="29dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_details_input"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Urgent"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:id="@+id/activity_add_checkBox_urgency" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_save"
        android:layout_alignRight="@+id/button_save"
        android:layout_below="@+id/activity_add_checkBox_urgency"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:id="@+id/activity_add_checkBox_importance"
        android:text="Important"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Save"
        android:textSize="30dp" />


    <Button
        android:id="@+id/activityAdd_button_back_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_save"
        android:layout_alignBottom="@+id/button_save"
        android:layout_toLeftOf="@+id/task_details_input"
        android:layout_toStartOf="@+id/task_details_input"
        android:text="Back" />

</RelativeLayout>
